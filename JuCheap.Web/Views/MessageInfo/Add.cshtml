@using JuCheap.Infrastructure.Extentions
@model JuCheap.Models.MessageInfoDto
@{
    ViewBag.Title = "添加订单信息";
    Layout = "~/Views/Shared/_Layout_Content.cshtml";
}


<div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>添加订单信息</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm("Add", "MessageInfo", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.MessTitle)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.MessTitle, new { @class = "form-control", placeholder = "称呼" })
                        @Html.ValidationMessageFor(m => m.MessTitle)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Linkphoto)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Linkphoto, new { @class = "form-control", placeholder = "电话" })
                        @Html.ValidationMessageFor(m => m.Linkphoto)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Messcontent)：</label>
                    <div class="col-sm-8">
                        @*<textarea class="form-control" id="Messcontent" rows="5" name=textarea></textarea>*@
                        @Html.TextBoxFor(m => m.Messcontent, new { @class = "form-control", placeholder = "分类名称" })
                        @Html.ValidationMessageFor(m => m.Messcontent)
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-8">
                        <button class="btn btn-info" type="submit" id="btnSave">保存</button>
                        <button class="btn btn-white" type="button" id="btnBack" data-type="url">返回</button>
                    </div>
                </div>
            }
        </div>

    </div>
</div>


@section styles
{
    <link href="~/Content/js/select2/css/select2.min.css" rel="stylesheet" />
}


